{
  "name": "@goodwaygroup/lib-hapi-dogstatsd",
  "version": "1.2.1",
  "description": "Hapi plugin for publishing route stats to DataDog",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:jest -- --coverage",
    "test:jest": "cross-env NODE_ENV=test jest ",
    "test:watch": "npm run test:jest -- --watch",
    "test:results": "open ./coverage/lcov-report/index.html",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "version": "git-chglog -o CHANGELOG.md --next-tag v$(grep '\\\"version\\\":' package.json | grep -v git-chglog | awk -F '\\\"' '{print $4}') && git add CHANGELOG.md",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoodwayGroup/lib-hapi-dogstatsd.git"
  },
  "author": "https://www.npmjs.com/~clok",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GoodwayGroup/lib-hapi-dogstatsd/issues"
  },
  "homepage": "https://github.com/GoodwayGroup/lib-hapi-dogstatsd#readme",
  "keywords": [
    "hapi",
    "metrics",
    "plugin",
    "request",
    "stats",
    "datadog",
    "dogstatsd",
    "instrumentation",
    "monitoring",
    "statsd"
  ],
  "nyc": {
    "include": [
      "lib/*.js"
    ],
    "exclude": [
      "index.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "all": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "sourceMap": false,
    "instrument": true,
    "cache": false,
    "check-coverage": false
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary",
      "json"
    ],
    "collectCoverageFrom": [
      "lib/**/*.{js,jsx,mjs}",
      "lib/index.js"
    ],
    "setupFiles": [],
    "testMatch": [
      "<rootDir>/spec/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "transform": {},
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {},
    "modulePaths": [
      "<rootDir>/lib"
    ],
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "devDependencies": {
    "@hapi/hapi": "20.1.3",
    "cross-env": "7.0.3",
    "eslint": "7.27.0",
    "eslint-config-goodway": "3.2.1",
    "eslint-plugin-import": "2.23.4",
    "husky": "6.0.0",
    "jest": "29.7.0"
  },
  "dependencies": {
    "@hapi/hoek": "9.2.0",
    "debug": "4.3.1",
    "dog-statsy": "1.3.1",
    "lodash": "4.17.21"
  }
}
