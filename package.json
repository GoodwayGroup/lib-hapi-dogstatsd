{
  "name": "@goodwaygroup/lib-hapi-dogstatsd",
  "version": "0.4.0",
  "description": "Hapi plugin for publishing route stats to DataDog",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc jasmine",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "version": "auto-changelog -p -l false --template keepachangelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoodwayGroup/lib-hapi-dogstatsd.git"
  },
  "author": "https://www.npmjs.com/~clok",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GoodwayGroup/lib-hapi-dogstatsd/issues"
  },
  "homepage": "https://github.com/GoodwayGroup/lib-hapi-dogstatsd#readme",
  "keywords": [
    "hapi",
    "metrics",
    "plugin",
    "request",
    "stats",
    "datadog",
    "dogstatsd",
    "instrumentation",
    "monitoring",
    "statsd"
  ],
  "pre-push": [
    "lint",
    "test"
  ],
  "nyc": {
    "include": [
      "lib/*.js"
    ],
    "exclude": [
      "index.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "all": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "sourceMap": false,
    "instrument": true,
    "cache": false,
    "check-coverage": false
  },
  "devDependencies": {
    "@hapi/hapi": "^18.3.1",
    "auto-changelog": "^1.1.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.8.0",
    "eslint-config-goodway": "^1.3.0",
    "eslint-plugin-import": "^2.7.0",
    "jasmine": "^3.0.0",
    "jasmine-core": "^3.0.0",
    "jasmine-reporters": "^2.2.1",
    "nock": "^9.0.22",
    "nyc": "^11.2.1",
    "pre-push": "^0.1.1"
  },
  "dependencies": {
    "@hapi/hoek": "^7.2.1",
    "dog-statsy": "^1.2.1"
  }
}
