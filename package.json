{
  "name": "lib-hapi-dogstatsd",
  "version": "0.0.1",
  "description": "Hapi plugin for publishing route stats to DataDog",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc jasmine",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoodwayGroup/lib-hapi-dogstatsd.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GoodwayGroup/lib-hapi-dogstatsd/issues"
  },
  "homepage": "https://github.com/GoodwayGroup/lib-hapi-dogstatsd#readme",
  "pre-push": [
    "lint",
    "test"
  ],
  "nyc": {
    "include": [
      "lib/*.js"
    ],
    "exclude": [
      "index.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "all": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "sourceMap": false,
    "instrument": true,
    "cache": false,
    "check-coverage": false
  },
  "devDependencies": {
    "cross-env": "^5.0.5",
    "eslint": "^4.8.0",
    "eslint-config-goodway": "^1.3.0",
    "eslint-plugin-import": "^2.7.0",
    "hapi": "^17.2.0",
    "jasmine": "^3.0.0",
    "jasmine-core": "^3.0.0",
    "jasmine-reporters": "^2.2.1",
    "nock": "^9.0.22",
    "nyc": "^11.2.1",
    "pre-push": "^0.1.1"
  },
  "dependencies": {
    "dog-statsy": "^1.2.0",
    "hoek": "5.0.3"
  }
}
